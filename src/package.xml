<?xml version="1.0" encoding="utf-8"?>
<package name="epiPublish" displayName="Data Publication" isAddOn="True" extendsPackage="epi" version="1.0.0">
  <transformers>
    <transformer
      name="PublishShiny"
      isPrimary="True"
      displayName="Data Publication: Publish to Shiny"
      programName="Rscript"
      programArguments="buildShiny.R"
      runContext="LocalOnly"
      isRunnable ="True">
      <datafeeds>
        <datafeed name="ShinyInputs" displayName="Publish Settings" dataScope="Scenario">
          <datasheets>
            <datasheet name="ShinyInputs" displayName="Publish Settings" isSingleRow="True">
              <columns>
                <column name="ShinyInputsID" dataType="Integer" isPrimary="True"/>
                <column name="ScenarioID" dataType="Integer" displayName="Scenario"/>
                <column name="Title" dataType="String"/>
                <column name="Percentile" dataType="Integer" displayName="Confidence interval (%)" validationType="WholeNumber" validationCondition="LessEqual" formula1="100" format="d"/>
                <column name="Output" dataType="String" displayName="Output folder"/>
              </columns>
              <defaultRecords>
                <record columns="Title|Percentile|Output" values="COVID-19 Projections|67|shiny"/>
              </defaultRecords>
            </datasheet>
          </datasheets>
        </datafeed>
      </datafeeds>
      <pipeline>
        <datafeed name="ShinyInputs"/>
        <datafeed name="epi_DataSummary"/>
      </pipeline>
    </transformer>
  </transformers>
  <layouts>
    <layout name="coreforms_ScenarioDatafeeds">
      <group name="Shiny" displayName="Publish to Shiny" appendTo="epi_Transformations">
          <item name="ShinyInputs" itemTransformer="PublishShiny" showIf="isEither"/>
          <item
            name="epi_DataSummary"
            displayName="Data to Publish"
            showIf="isEither"
            viewClassName="SyncroSim.Core.Forms.MultiRowDataFeedView"
            viewClassAssembly="SyncroSim.Core.Forms"
            itemTransformer="PublishShiny" />
      </group>
    </layout>
  </layouts>
</package>
